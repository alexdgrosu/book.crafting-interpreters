{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:sharplox",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/sharplox/SharpLox.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "format:sharplox",
      "type": "process",
      "command": "dotnet",
      "args": [
        "format",
        "${workspaceFolder}/sharplox/SharpLox.sln"
      ],
      "problemMatcher": []
    }
  ]
}
